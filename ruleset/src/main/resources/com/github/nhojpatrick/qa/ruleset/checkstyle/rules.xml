<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Checks for Size Violations.                             -->
    <!-- See https://checkstyle.sourceforge.io/config_sizes.html -->
    <module name="LineLength">
        <property name="fileExtensions" value="java"></property>
        <property name="max" value="120"></property>
        <property name="ignorePattern" value="^package.*|^import.*|.*LOGGER.*|^.*\@Given\(.*"></property>
    </module>
    <!-- Checks for whitespace                               -->
    <!-- See http://checkstyle.sf.net/config_whitespace.html -->
    <module name="FileTabCharacter"></module>
</module>
